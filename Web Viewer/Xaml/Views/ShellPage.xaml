<Page x:Class="TrufflePig.Xaml.Views.ShellPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:xaml="using:TrufflePig.Xaml"
      Loaded="PageLoaded"
      mc:Ignorable="d">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="42" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid x:Name="AppTitleBar"
              VerticalAlignment="Stretch"
              Canvas.ZIndex="1"
              ColumnSpacing="8"
              IsHitTestVisible="True">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Image x:Name="TitleBarIcon"
                   Width="16"
                   Height="16"
                   HorizontalAlignment="Left" />
            <TextBlock x:Name="AppTitleBarText"
                       Grid.Column="1"
                       VerticalAlignment="Center"
                       Style="{StaticResource SmoothCaptionTextBlockStyle}"
                       TextWrapping="NoWrap" />
            <Border Grid.Column="2"
                    Padding="8,6"
                    HorizontalAlignment="Left"
                    VerticalAlignment="Center"
                    Background="{StaticResource CaptionHighlightColor}"
                    CornerRadius="8"
                    Visibility="{x:Bind xaml:Adapters.IsPreviewBuild}">
                <TextBlock VerticalAlignment="Center"
                           FontSize="12"
                           Style="{StaticResource SmoothCaptionTextBlockStyle}"
                           Text="{x:Bind xaml:Adapters.BuildName}"
                           TextLineBounds="Tight" />
            </Border>
        </Grid>
        <Grid Grid.Row="1">
            <Frame x:Name="MainFrame" />
            <InfoBar x:Name="NotificationsBar"
                     Margin="0,0,0,16"
                     HorizontalAlignment="Center"
                     VerticalAlignment="Bottom"
                     Background="{ThemeResource PopupBackgroundColor}"
                     Message="Some message here"
                     RequestedTheme="{ThemeResource AppNegativeTheme}" />
        </Grid>
    </Grid>
</Page>